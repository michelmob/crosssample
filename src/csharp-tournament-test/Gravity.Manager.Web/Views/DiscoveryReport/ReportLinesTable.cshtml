@model Gravity.Manager.Web.Models.DiscoveryReport.ReportLineViewModel

<table class="table table-striped table-hover">
    <thead>
    <tr>
        @foreach (var item in Model.TableHeaders)
        {
            <th>
                @item
            </th>
        }
    </tr>
    </thead>
    <tbody>
    @foreach (var row in Model.Children)
    {
        <tr>
            @if (row.Children != null)
            {
                foreach (var col in row.Children)
                {
                    <td>
                        @col.GetValueAndChildren()
                    </td>
                }
            }
            else
            {
                <td>
                    @row.GetValueAndChildren()
                </td>
            }

        </tr>
    }
</table>


